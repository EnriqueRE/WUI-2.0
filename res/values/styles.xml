<resources>

    <style name="Theme.Wallet" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_wallet</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Wallet</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Wallet</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Wallet</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Wallet</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Wallet</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_wallet</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_wallet</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Wallet</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Wallet.Widget</item>

    </style>

    <style name="ActionBar.Solid.Wallet" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_wallet</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_wallet</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_wallet</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Wallet</item>
    </style>

    <style name="ActionBar.Transparent.Wallet" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_wallet</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Wallet</item>
    </style>

    <style name="PopupMenu.Wallet" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_wallet</item>
    </style>

    <style name="DropDownListView.Wallet" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_wallet</item>
    </style>

    <style name="ActionBarTabStyle.Wallet" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_wallet</item>
    </style>

    <style name="DropDownNav.Wallet" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_wallet</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_wallet</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_wallet</item>
    </style>

    <style name="ProgressBar.Wallet" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_wallet</item>
    </style>

    <style name="ActionButton.CloseMode.Wallet" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_wallet</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Wallet.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Wallet</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Wallet</item>
    </style>

    <style name="TextAppearance.YourApp.FloatLabel" parent="android:TextAppearance.Small">
        <item name="android:textColor">@drawable/wallet_float_label</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
